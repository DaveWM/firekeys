<UserControl x:Class="FireKeysAPI.Actions.NewOpenFolderActionUserInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:apexControls="clr-namespace:Apex.Controls;assembly=Apex" mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="600">

    <apexControls:PaddedGrid Padding="4" Grid.Row="2" Rows="Auto" Columns="*,2*">

        <Label Grid.Row="0" Grid.Column="0" Content="_Folder Path" FontSize="14" />
        <apexControls:FolderTextBox x:Name="textBoxFolder" Grid.Row="0" Grid.Column="1" Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}" TextChanged="textBoxFolder_TextChanged_1" FontSize="14" />
        
    </apexControls:PaddedGrid>
</UserControl>
